#!/bin/bash
# NetBlinBot CLI entry point

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
VENV_PYTHON="$SCRIPT_DIR/venv/bin/python"

if [ -f "$VENV_PYTHON" ]; then
    exec "$VENV_PYTHON" -c "
import sys
sys.path.insert(0, '$SCRIPT_DIR')
from netblin_cli.cli import main
main()
" "$@"
else
    echo "venv не найден. Создай: python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
    exit 1
fi
